md-dialog.student(flex="40")
   md-toolbar
      h2.md-display-1(layout="row" layout-margin="auto") Add Student
   md-dialog-content
      form(name="editStudent" novalidate)
         .inputs
            md-input-container
               label First Name
               input(ng-model="student.fname" name="fname" type="text" value="student.fname" required)
               div(ng-messages="studentForm.fname.$error")
                  div(ng-message="required") *Required
            md-input-container
               label Last Name
               input(ng-model="student.lname" name="lname" type="text" value="student.lname" required)
               div(ng-messages="studentForm.lname.$error")
                  div(ng-message="required") *Required
            md-input-container
               label Email
               input(ng-model="student.email" name="email" type="text" value="student.email" required)
               div(ng-messages="studentForm.email.$error")
                  div(ng-message="required") *Required
            md-input-container
               label Select Cohort
               input(ng-model="student.cohort" type="text" name="cohort" value="student.cohort" required)
               div(ng-messages="studentForm.cohort.$error")
                  div(ng-message="required") *Required
            .loginbut(layout="row" layout-align="center center")
               md-button.md-raised(ng-disabled="editStudent.$invalid" ng-click="submit(fname, lname, email, cohort)") Save
               md-button.md-raised.md-warn(ng-click="close()") Cancel