md-content.md-default(ng-controller="interviewers" layout="column")
    md-card.md-whiteframe-5dp
        md-data-table-toolbar.eventBg(ng-hide="filter.show")
            h2.md-title Interviewers
            div(flex)
            md-button.md-icon-button.md-default(ng-click="filter.show = true")
                md-icon.material-icons.md-dark filter_list
                .md-ripple-container
            md-button.md-icon-button.md-default(ng-controller="interviewer" ng-click="openInterviewer($event)")
                md-icon.material-icons.md-dark add
            md-button.md-icon-button.md-default(ng-controller="uploads" ng-click="openUploads($event)")
                md-icon.material-icons.md-dark file_upload
        md-data-table-toolbar.eventBg(layout="row" layout-align="center center" ng-show="filter.show && interviewers.length")
            md-icon.material-icons.md-dark search
            form(flex name="filter.form")
                md-input-container
                    label search
                    input(type="text" ng-model="query.filter" ng-model-options="filter.options")
            span(flex="70")
            md-button.md-icon-button.md-default(ng-click="removeFilter()")
                md-icon.material-icons.md-dark close
                .md-ripple-container
        md-data-table-container.eventBg
            table(md-data-table md-row-select="selected" md-progress="deferred")
                thead.eventBg(md-order="query.order" md-trigger="onOrderChange")
                    tr
                        th(name="First Name" order-by="name") First Name
                        th(name="Last Name" order-by="name") Last Name
                        th(name="EMail" order-by="name") EMail
                        th(name="company" order-by="name") Company
                        th(name="title" order-by="name") Title
                        th(name="archive") Archive
                        th(name="edit") Edit
                tbody.eventBg
                    tr.eventBg(md-auto-select ng-repeat="interviewer in interviewers")
                        td {{interviewer.fName}}
                        td {{interviewer.lName}}
                        td {{interviewer.email}}
                        td {{interviewer.company}}
                        td {{interviewer.title}}
                        td
                            md-button.md-icon-button(ng-click="archive(interviewer._id)")
                                md-icon.material-icons.md-dark archive
                                .md-ripple-container
                        td
                            md-button.md-icon-button(ng-click="editInterviewer(interviewer._id)")
                                md-icon.material-icons.md-dark edit
                                .md-ripple-container