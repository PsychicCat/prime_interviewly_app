.formlay(layout="row" layout-margin="auto")
   span(flex="30")
   .md-whiteframe-z2(layout="column" flex="40" style="margin:50px 0; ")
      form(name="login" ng-controller="login" novalidate)
         md-content.eventBg(layout-padding)
            md-input-container
               label Username
               input(ng-model="username" type="text" name="username" required)
               .messageuser(ng-messages="login.username.$error" ng-if="login.username.$touched")
                  .messageuser1(ng-message="required") Please enter username
            md-input-container
               label Password
               input(ng-model="password" type="password" name="password" required)
               .messagepass(ng-messages="login.password.$error" ng-if="login.password.$touched")
                  .messagepass1(ng-message="required") Please enter password
         .loginbut(layout="row" layout-align="center center")
            md-button.md-raised(ng-click="submit(username, password)") Login
            md-button.md-raised(ng-controller="registerOpen" ng-click="openRegister($event)") Sign Up
         .loginbut(layout="row" layout-align="center center")
            md-button.md-warn.md-hue-1(ng-click="forgot()") Forgot Password?
   span(flex="30")