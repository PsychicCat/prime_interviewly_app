.welcome
    .eventsheader(layout="row" layout-align="left left")
        h1 Events
        md-button.md-raised() Create a New Event

    .searchheader(layout="row" layout-align="left left")
        h3 Search By:
        md-checkbox(aria-label="Last Updated") Last Updated
        md-checkbox(aria-label="Last Updated") Event Date
        md-datepicker(ng-model="myDate" md-placeholder="Start Date")
        md-datepicker(ng-model="myDate" md-placeholder="End Date")
        md-input-container
            label Search
            input(ng-model="user.username" type="text")
        md-button.md-raised() Go

    .gridheader(layout="row" layout-align="center center")
        div(ng-controller="eventsCtrl as vm", flex="", ng-cloak="")
            md-grid-list(md-cols-gt-md="6", md-row-height-gt-md="1:1", md-row-height="4:3", md-gutter="8px", md-gutter-gt-sm="4px")
                md-grid-tile(ng-repeat="tile in vm.tiles", md-rowspan="{{tile.span.row}}", md-colspan="{{tile.span.col}}", md-colspan-sm="1", ng-class="tile.background")
                    md-icon(md-svg-icon="{{tile.icon}}")
                    md-grid-tile-footer
                        h3 {{tile.title}}




