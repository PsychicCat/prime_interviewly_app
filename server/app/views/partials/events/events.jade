.welcome
    .eventsheader(layout="row" layout-align="start center" layout-margin="auto" flex="auto")
        h1.md-display-1 Events
        md-content(layout-margin="auto")
            md-button.md-raised(href="/new-event") Create New Event

        .searchheader(layout="row" layout-align="start center" layout-margin="auto" flex="auto")
            md-content(layout-margin="auto")
            md-checkbox(aria-label="Last Updated") Last Updated
            md-checkbox(aria-label="Last Updated") Event Date
            md-datepicker(ng-model="myDate" md-placeholder="Start Date")
            md-datepicker(ng-model="myDate" md-placeholder="End Date")
            md-button.md-raised() Go

    .gridheader(layout="row" layout-align="center center" layout-margin="auto" layout-padding="auto" flex="auto")
        div(ng-controller="eventsCtrl as vm", flex="auto", ng-cloak="" class="eventsCtrl" ng-app="app")
            md-grid-list(md-cols-gt-md="6", md-row-height-gt-md="1:1", md-row-height="4:3", md-gutter="8px", md-gutter-gt-sm="4px")
                md-grid-tile(ng-repeat="tile in vm.tiles", md-rowspan="{{tile.span.row}}", md-colspan="{{tile.span.col}}", md-colspan-sm="1", ng-class="tile.background")
                    h4.md-subhead(layout="column" layout-align="start center" layout-margin="auto" layout-padding="auto" flex="auto") {{tile.title}}
                        md-button.md-icon-button(ng-click="submit()")
                            md-icon.i.material-icons event
                    md-grid-tile-footer(layout="row" layout-align="end center")
                        .buttonheader
                            md-button.md-icon-button.md-raised.md-primary(ng-click="showConfirm($event)")
                                md-icon.i.material-icons done
                            md-button.md-icon-button.md-raised.md-warn(ng-click="showConfirm($event)")
                                md-icon.i.material-icons delete




