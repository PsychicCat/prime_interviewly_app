md-content.md-default.eventBg(ng-controller="students" layout="column")
    md-card.md-whiteframe-5dp
        md-data-table-toolbar.md-primary.eventBg(ng-hide="filter.show")
            h2.md-title Students
            div(flex)
            md-button.md-icon-button.md-default(ng-click="filter.show = true")
                md-icon.material-icons.md-dark filter_list
                div.md-ripple-container
            md-button.md-icon-button.md-default(ng-controller="student" ng-click="openStudents()")
                md-icon.material-icons.md-dark add
            md-button.md-icon-button.md-default(ng-controller="uploads" ng-click="openUploads($event)")
                md-icon.material-icons.md-dark file_upload
        md-data-table-toolbar.eventBg(layout="row" ng-show="filter.show && students.length")
            md-icon.material-icons.md-dark search
            form(flex name="filter.form")
                md-input-container
                    label search
                    input(type="text" ng-model="query.filter" ng-model-options="filter.options")
            span(flex="70")
            md-button.md-icon-button.md-default(ng-click="removeFilter()")
                md-icon.material-icons.md-dark close
                .md-ripple-container
        md-data-table-container.eventBg
            table.md-primary.eventBg(md-data-table md-row-select="selected" md-progress="deferred")
                thead.eventBg(md-order="query.order" md-trigger="onOrderChange")
                    tr
                        th(name="First Name" order-by="name") First Name
                        th(name="Last Name" order-by="type") Last Name
                        th(name="email" order-by="email") Email
                        th(name="cohort" order-by="cohort") Cohort
                        th(name="archive") Archive
                        th(name="edit") Edit
                tbody.eventBg
                    tr(md-auto-select ng-repeat="student in students | orderBy: query.order | limitTo: query.limit: (query.page -1) * query.limit")
                        td {{student.fName}}
                        td {{student.lName}}
                        td {{student.email}}
                        td {{student.cohort}}
                        td
                            md-button.md-icon-button(ng-click="archive(student._id)" aria-label="archive")
                                md-icon.material-icons.md-dark archive
                                .md-ripple-container
                        td
                            md-button.md-icon-button(ng-click="editStudent(student._id)" aria-label="edit")
                                md-icon.material-icons.md-dark edit
                                .md-ripple-container
        md-data-table-pagination(md-limit="query.limit" md-page="query.page" md-total="{{students.length}}" md-trigger="onpagechange")